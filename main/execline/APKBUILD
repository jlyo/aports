# Contributor: John Regan <john@jrjrtech.com>
# Maintainer: John Regan <john@jrjrtech.com>
pkgname=execline
_pkgver=2.1.3.1
pkgver=2.1.4.0
pkgrel=0
pkgdesc="A small scripting language, to be used in place of a shell in non-interactive scripts."
url="http://skarnet.org/software/$pkgname/"
arch="all"
license="ISC"
depends="skalibs"
depends_dev="skalibs-dev"
makedepends="$depends_dev"
install=""
subpackages="$pkgname-dev"
source="http://skarnet.org/software/$pkgname/$pkgname-$_pkgver.tar.gz
        0001-Add-EXECLINE_BLOCK_-_STRING-macros.patch
        0002-Add-withstdinas.patch"


_builddir="$srcdir/$pkgname-$_pkgver"
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--enable-shared \
		--enable-static \
		--disable-allstatic \
		--prefix=/usr \
		--libdir=/usr/lib \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	rm -f "$pkgdir"/usr/lib/*.la
}

